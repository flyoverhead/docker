---

services:
  {{ grafana_name }}:
    image: {{ grafana_image }}:{{ grafana_tag }}
    container_name: {{ grafana_name }}
    restart: {{ grafana_restart_policy }}
    environment:
      - GF_SERVER_HTTP_PORT={{ grafana_listening_port }}
      - GF_SECURITY_ADMIN_USER={{ grafana_admin_username }}
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password }}
      - GF_INSTALL_PLUGINS={{ grafana_plugins | join(',')}}
      - TZ={{ grafana_timezone }}
    volumes:
      - {{ grafana_path }}/provisioning/dashboards:/etc/grafana/provisioning/dashboards
      - {{ grafana_path }}/provisioning/datasources:/etc/grafana/provisioning/datasources
      - {{ grafana_path }}/dashboards:/var/lib/grafana/dashboards
      - /etc/localtime:/etc/localtime:ro
      - /etc/timezone:/etc/timezone:ro
{% if grafana_network_mode == "bridge" %}
    ports:
      - "{{ grafana_listening_port }}:{{ grafana_listening_port }}"
{% endif %}
    network_mode: {{ grafana_network_mode }}
